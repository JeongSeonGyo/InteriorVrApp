<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.interiorvrapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="196dp"/>

    <EditText
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="ID"
            android:layout_above="@+id/password"
            android:layout_alignStart="@+id/password" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_above="@+id/Signupbtn"
            android:layout_alignStart="@+id/loginbtn"
            android:layout_marginBottom="17dp" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="179dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/Signupbtn" />

        <Button
            android:id="@+id/Signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_marginEnd="89dp"
            android:layout_alignBaseline="@+id/loginbtn"
            android:layout_alignBottom="@+id/loginbtn"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
